<Window
    x:Class="BooksWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BooksWpf"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Отдел книг"
    Width="800"
    Height="350"
    Background="Black"
    Foreground="White"
    mc:Ignorable="d">
    <Grid>
        <Label
            HorizontalContentAlignment="Center"
            Content="Добро пожаловать в библиотеку!"
            FontSize="18"
            Foreground="White" />
        <Label
            Margin="40"
            HorizontalContentAlignment="Center"
            Content="Отделы"
            FontSize="15"
            Foreground="White" />
        <Grid>
            <Button
                Margin="225,138,225,123"
                Background="#FF171717"
                BorderThickness="3"
                Click="Button_Click"
                Content="Найти книгу"
                Foreground="White" />
        </Grid>
    </Grid>
</Window>
