@model IEnumerable<WebApplication2.Models.Table>

@{
    ViewBag.Title = "FlowersDb";
}

<h2>Магазин спортивных товаров</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FlowerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Article)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FlowerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Article)
        </td>
        <td>

            @Html.ActionLink("Edit", "Edit", new { id = item.FlowerId }) |
            @Html.ActionLink("Details", "Details", new { id = item.FlowerId }) |
            <form action="@Url.Action("AddToCart", "Home")" method="post">
                @Html.Hidden("id", item.FlowerId)
                <input type="submit" value="Add to Cart" class="btn btn-primary" />
            </form>
            @Html.ActionLink("Delete", "Delete", new { id = item.FlowerId })
        </td>
    </tr>
}

</table>
